pipeline {
    agent any
    
    tools {
        jdk 'jdk17'      // Ensures we match the Tomcat container version
        maven 'maven3'
    }
    
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        DOCKER_HUB_USER = 'ryansaad85'  // Your Docker Hub Username
    }
    
    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        
        stage('Compiling Maven Code') {
            steps {
                // Pointing to the correct folder
                dir('DevOps-Project-33/DevSecOps-CI-CD-Pipeline') {
                    sh 'mvn clean compile'
                }
            }
        }
        
        stage('Maven Test') {
            steps {
                dir('DevOps-Project-33/DevSecOps-CI-CD-Pipeline') {
                    sh 'mvn test'
                }
            }
        }
        
        stage("Analysis using SonarQube") {
            steps {
                dir('DevOps-Project-33/DevSecOps-CI-CD-Pipeline') {
                    withSonarQubeEnv('sonar-server') {
                        sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=Petshop \
                        -Dsonar.java.binaries=. \
                        -Dsonar.projectKey=Petshop '''
                    }
                }
            }
        }
        
        stage("SonarQube Quality Gate") {
            steps {
                script {
                    timeout(time: 1, unit: 'HOURS') {
                        waitForQualityGate abortPipeline: false, credentialsId: 'sonarqube-token'
                    }
                }
            }
        }
        
        stage('Building War File') {
            steps {
                dir('DevOps-Project-33/DevSecOps-CI-CD-Pipeline') {
                    sh 'mvn clean install -DskipTests=true'
                }
            }
        }
        
        stage('Building and Pushing to Docker Hub') {
            steps {
                dir('DevOps-Project-33/DevSecOps-CI-CD-Pipeline') {
                    script {
                        withDockerRegistry(credentialsId: 'docker', toolName: 'docker') {
                            // Using env.DOCKER_HUB_USER to be safe
                            sh "docker build -t ${env.DOCKER_HUB_USER}/petshop:${BUILD_NUMBER} ."
                            sh "docker tag ${env.DOCKER_HUB_USER}/petshop:${BUILD_NUMBER} ${env.DOCKER_HUB_USER}/petshop:latest"
                            sh "docker push ${env.DOCKER_HUB_USER}/petshop:${BUILD_NUMBER}"
                            sh "docker push ${env.DOCKER_HUB_USER}/petshop:latest"
                        }
                    }
                }
            }
        }
        
        stage("Image Scanning using TRIVY") {
            steps {
                sh "trivy image ${env.DOCKER_HUB_USER}/petshop:${BUILD_NUMBER} > trivy.txt"
            }
        }
        
        stage('QA Testing Stage') {
            steps {
                script {
                    // Clean up old container (ignore error if missing)
                    sh 'docker rm -f qacontainer || true'
                    
                    // Run new container using env.DOCKER_HUB_USER
                    sh "docker run -d --name qacontainer -p 8081:8080 ${env.DOCKER_HUB_USER}/petshop:latest"
                    
                    // Wait for Tomcat to initialize
                    echo "Waiting for Tomcat to start..."
                    sleep 20
                }
                
                // Retry loop: Checks URL, if fails, it retries.
                retry(5) {
                    sleep 10
                    script {
                        // Check Root URL OR JPetStore URL. If both fail, exit 1 to trigger retry.
                        sh '''
                            if curl -s -I http://localhost:8081/ | grep "200 OK"; then 
                                echo "Root URL is UP"; 
                            elif curl -s -I http://localhost:8081/jpetstore/ | grep "200 OK"; then 
                                echo "JPetStore URL is UP"; 
                            else 
                                echo "App not ready yet..."; 
                                exit 1; 
                            fi
                        '''
                    }
                }
            }
            post {
                success {
                    echo "QA Check Passed!"
                }
                failure {
                    sh 'docker logs qacontainer'
                    emailext attachLog: true,
                    subject: "QA Failed",
                    body: "QA Check Failed. See attached logs.",
                    to: 'ryansaad85@gmail.com'
                }
            }
        }
    }
}