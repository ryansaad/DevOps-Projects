pipeline {
    agent any
    tools {
        jdk 'jdk17'
        nodejs 'node19'
    }
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }
    stages {
        stage('Checkout from Git') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/ryansaad/DevOps-Projects.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                dir('DevOps-Project-28/Chatbot-UI') { 
                    sh "npm install"
                }
            }
        }
        
        stage("Sonarqube Analysis") {
            steps {
                dir('DevOps-Project-28/Chatbot-UI') {
                    withSonarQubeEnv('sonar-server') {
                        sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=Chatbot \
                        -Dsonar.projectKey=Chatbot '''
                    }
                }
            }
        }
        
        stage("Quality Gate") {
            steps {
                script {
                    waitForQualityGate abortPipeline: false, credentialsId: 'Sonar-token'
                }
            }
        }
        
        stage('TRIVY FS SCAN') {
            steps {
                dir('DevOps-Project-28/Chatbot-UI') {
                    sh "trivy fs . > trivyfs.json"
                }
            }
        }
        
        stage("Docker Build & Push") {
            steps {
                dir('DevOps-Project-28/Chatbot-UI') {
                    script {
                        withDockerRegistry(credentialsId: 'docker', toolName: 'docker') {
                            sh "docker build -t chatbot ."
                            sh "docker tag chatbot ryansaad85/chatbot:latest"
                            sh "docker push ryansaad85/chatbot:latest"
                        }
                    }
                }
            }
        }
        
        stage("TRIVY Image Scan") {
            steps {
                sh "trivy image ryansaad85/chatbot:latest > trivy.json"
            }
        }
        
        stage("Remove Local Container") {
            steps {
                sh "docker stop chatbot || true"
                sh "docker rm chatbot || true"
            }
        }
        
        // OPTIONAL: Deploy to Jenkins Server for testing (Port 3000)
        stage('Deploy to Local Docker (Test)') {
            steps {
                sh 'docker run -d --name chatbot -p 3000:3000 ryansaad85/chatbot:latest'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                // ⚠️ CRITICAL FIX: Tell Jenkins where to find the YAML file
                dir('DevOps-Project-28/Chatbot-UI/k8s') {
                    withAWS(credentials: 'aws-key', region: 'us-east-1') {
                        script {
                            withKubeConfig(credentialsId: 'k8s') {
                                // Now it will find k8s/chatbot-ui.yaml correctly
                                sh 'kubectl apply -f k8s/chatbot-ui.yaml' 
                            }
                        }
                    }
                }
            }
        }
    }
}