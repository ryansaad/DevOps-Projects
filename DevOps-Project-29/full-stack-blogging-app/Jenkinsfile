pipeline {
    agent any
    
    tools {
        jdk "jdk17"
        maven "maven3"
    }
    
    environment {
        // Updated to the correct nested path
        PROJECT_DIR = "DevOps-Project-29/full-stack-blogging-app" 
        DOCKER_IMAGE = "ryansaad85/blogging-app"
    }
    
    stages {
        stage('Git Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Compile') {
            steps {
                // Now points to the deep folder
                dir("${PROJECT_DIR}") {
                    sh "mvn compile"
                }
            }
        }
        
        stage('Trivy FS') {
            steps {
                dir("${PROJECT_DIR}") {
                    sh "trivy fs . --format table -o fs.html"
                }
            }
        }
        
        stage('Build') {
            steps {
                dir("${PROJECT_DIR}") {
                    sh "mvn package"
                }
            }
        }
        
        stage('Docker Build & Tag') {
            steps {
                dir("${PROJECT_DIR}") {
                    script {
                        withDockerRegistry(credentialsId: 'docker', url: 'https://index.docker.io/v1/') {
                            sh "docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} ."
                            sh "docker tag ${DOCKER_IMAGE}:${BUILD_NUMBER} ${DOCKER_IMAGE}:latest"
                        }
                    }
                }
            }
        }
        
        stage('Docker Push Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker', url: 'https://index.docker.io/v1/') {
                        sh "docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_IMAGE}:latest"
                    }
                }
            }
        }
    }
}