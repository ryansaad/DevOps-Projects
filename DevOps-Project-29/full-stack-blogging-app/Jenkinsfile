pipeline {
    agent any
    
    tools {
        jdk "jdk17"     // Verified: You named this jdk17
        maven "maven3"  // Verified: You named this maven3
    }
    
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        DOCKER_IMAGE = "ryansaad85/blogging-app"
        // Define the subfolder name here for easy reuse
        PROJECT_DIR = "full-stack-blogging-app"
    }
    
    stages {
        stage('Git Checkout') {
            steps {
                // Since you are using "Pipeline from SCM", Jenkins auto-checkouts the code.
                // We just need to ensure we have the fresh code.
                checkout scm
            }
        }
        
        stage('Compile') {
            steps {
                dir("${PROJECT_DIR}") {
                    sh "mvn compile"
                }
            }
        }
        
        stage('Trivy FS') {
            steps {
                dir("${PROJECT_DIR}") {
                    sh "trivy fs . --format table -o fs.html"
                }
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                dir("${PROJECT_DIR}") {
                    withSonarQubeEnv('sonar-server') {
                        sh """$SCANNER_HOME/bin/sonar-scanner \
                        -Dsonar.projectName=Blogging-app \
                        -Dsonar.projectKey=Blogging-app \
                        -Dsonar.java.binaries=target"""
                    }
                }
            }
        }
        
        stage('Build') {
            steps {
                dir("${PROJECT_DIR}") {
                    sh "mvn package"
                }
            }
        }
        
        stage('Publish Artifacts') {
            steps {
                dir("${PROJECT_DIR}") {
                    withMaven(globalMavenSettingsConfig: 'maven-settings', jdk: 'jdk17', maven: 'maven3', mavenSettingsConfig: '', traceability: true) {
                        sh "mvn deploy"
                    }
                }
            }
        }
        
        stage('Docker Build & Tag') {
            steps {
                dir("${PROJECT_DIR}") {
                    script {
                        withDockerRegistry(credentialsId: 'docker', url: 'https://index.docker.io/v1/') {
                            sh "docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} ."
                            sh "docker tag ${DOCKER_IMAGE}:${BUILD_NUMBER} ${DOCKER_IMAGE}:latest"
                        }
                    }
                }
            }
        }
        
        stage('Trivy Image Scan') {
            steps {
                // No dir() needed here as Trivy scans the remote/local image, not a file path
                sh "trivy image --format table -o image.html ${DOCKER_IMAGE}:latest"
            }
        }
        
        stage('Docker Push Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker', url: 'https://index.docker.io/v1/') {
                        sh "docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_IMAGE}:latest"
                    }
                }
            }
        }
    } // Closing stages

    post {
        always {
            script {
                def jobName = env.JOB_NAME
                def buildNumber = env.BUILD_NUMBER
                def pipelineStatus = currentBuild.result ?: 'SUCCESS'
                echo "Pipeline finished with status: ${pipelineStatus}"
                
                // Optional: Send email
                // emailext ...
            }
        }
    }
}